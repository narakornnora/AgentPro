  "flows": [
    {
      "name": "place_order",
      "steps": [
        "select_coffee",
        "add_to_cart",
        "view_cart",
        "checkout"
      ]
    },
    {
      "name": "contact_support",
      "steps": [
        "open_contact_page",
        "fill_contact_form",
        "submit_form"
      ]
    }
  ]
