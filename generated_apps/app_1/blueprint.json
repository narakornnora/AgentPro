{
  "app_name": "CoffeeHub",
  "app_type": "web app",
  "ui_theme": "modern, cozy, coffee-themed",
  "color_scheme": "neutral colors with coffee accents",
  "target_audience": "คนรักกาแฟ และผู้ที่ต้องการสั่งกาแฟออนไลน์",
  "intent": "default",
  "navigation": {
    "topbar": {
      "title": "CoffeeHub",
      "search": true
    },
    "bottom": [
      {
        "icon": "home",
        "label": "หน้าแรก",
        "route": "/home"
      },
      {
        "icon": "menu",
        "label": "เมนู",
        "route": "/menu"
      },
      {
        "icon": "shopping_cart",
        "label": "ตะกร้าสินค้า",
        "route": "/cart"
      },
      {
        "icon": "location_on",
        "label": "สถานที่",
        "route": "/locations"
      },
      {
        "icon": "info",
        "label": "ติดต่อเรา",
        "route": "/contact"
      }
    ]
  },
  "routes": [
    {
      "path": "/home",
      "components": [
        "banner",
        "promotions",
        "featured_products"
      ],
      "description": "หน้าแรกแสดงโปรโมชั่นและสินค้าขายดี"
    },
    {
      "path": "/menu",
      "components": [
        "category_filter",
        "coffee_list",
        "coffee_card"
      ],
      "description": "แสดงเมนูกาแฟ แบ่งตามประเภท"
    },
    {
      "path": "/cart",
      "components": [
        "cart_items",
        "total_price",
        "checkout_button"
      ],
      "description": "แสดงรายการที่เลือกซื้อและปุ่มชำระเงิน"
    },
    {
      "path": "/locations",
      "components": [
        "map",
        "location_list"
      ],
      "description": "แสดงแผนที่และสถานที่ที่ให้บริการ"
    },
    {
      "path": "/contact",
      "components": [
        "contact_form",
        "faq"
      ],
      "description": "ฟอร์มติดต่อและคำถามที่พบบ่อย"
    }
  ],
  "data_models": {
    "coffee": {
      "id": "integer",
      "name": "string",
      "price": "float",
      "category": "string",
      "image_url": "string",
      "description": "string"
    },
    "order": {
      "id": "integer",
      "user_id": "integer",
      "coffee_ids": "array",
      "total_price": "float",
      "status": "string"
    },
    "location": {
      "id": "integer",
      "name": "string",
      "address": "string",
      "coordinates": "object"
    }
  },
  "sample_data": {
    "coffees": [
